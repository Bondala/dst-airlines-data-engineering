# ========================================
# SECURITY SETTINGS
# ========================================
# JWT Configuration
JWT_SECRET_KEY=jwt-secret-key-change-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Password Hashing
PASSWORD_HASH_ALGORITHM=bcrypt

# ========================================
# EMAIL CONFIGURATION (Optional)
# ========================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_USE_TLS=true

# ========================================
# CLOUD STORAGE (Optional)
# ========================================
# AWS Configuration
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-west-2
S3_BUCKET_NAME=dst-airlines-data

# Azure Configuration
AZURE_STORAGE_ACCOUNT=your_storage_account
AZURE_STORAGE_KEY=your_storage_key
AZURE_CONTAINER_NAME=dst-airlines

# Google Cloud Configuration
GOOGLE_CLOUD_PROJECT=your-gcp-project
GOOGLE_APPLICATION_CREDENTIALS=path/to/service-account.json

# ========================================
# LOGGING CONFIGURATION
# ========================================
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE_PATH=logs/app.log
LOG_MAX_BYTES=10485760  # 10MB
LOG_BACKUP_COUNT=5

# ========================================
# CACHING CONFIGURATION
# ========================================
CACHE_TYPE=redis
CACHE_DEFAULT_TIMEOUT=300
CACHE_KEY_PREFIX=dst_airlines

# ========================================
# RATE LIMITING
# ========================================
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600  # 1 hour in seconds

# ========================================
# DATA PROCESSING SETTINGS
# ========================================
# API Call Intervals (in seconds)
FLIGHT_DATA_REFRESH_INTERVAL=300  # 5 minutes
AIRPORT_DATA_REFRESH_INTERVAL=3600  # 1 hour
SCHEDULE_DATA_REFRESH_INTERVAL=86400  # 24 hours

# Batch Processing Settings
BATCH_SIZE=100
MAX_CONCURRENT_REQUESTS=10
REQUEST_TIMEOUT=30

# Data Retention (in days)
FLIGHT_STATUS_RETENTION_DAYS=30
LOG_RETENTION_DAYS=90

# ========================================
# MONITORING AND ALERTING
# ========================================
# Health Check Settings
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=10

# Alert Configuration
ALERT_EMAIL_ENABLED=false
ALERT_EMAIL_RECIPIENTS=admin@dstairlines.com,team@dstairlines.com
ALERT_SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK

# ========================================
# DEVELOPMENT SETTINGS
# ========================================
# Auto-reload for development
AUTO_RELOAD=true

# Test Database Settings
TEST_DATABASE_URL=sqlite:///./test.db

# Mock API Responses (for testing without real API calls)
USE_MOCK_DATA=false

# ========================================
# PRODUCTION SETTINGS
# ========================================
# SSL Configuration
SSL_CERT_PATH=ssl/cert.pem
SSL_KEY_PATH=ssl/key.pem

# CORS Settings
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8501,https://yourdomain.com
ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
ALLOWED_HEADERS=*

# Session Configuration
SESSION_SECRET_KEY=session-secret-key-change-in-production
SESSION_TIMEOUT=1800  # 30 minutes

# ========================================
# FEATURE FLAGS
# ========================================
ENABLE_REAL_TIME_UPDATES=true
ENABLE_NOTIFICATIONS=false
ENABLE_ANALYTICS=true
ENABLE_EXPORT_FEATURES=true
ENABLE_ADMIN_PANEL=true

# ========================================
# EXTERNAL INTEGRATIONS
# ========================================
# Weather API (Optional for enhanced flight data)
WEATHER_API_KEY=your_weather_api_key

# Maps API (Optional for enhanced visualizations)
MAPS_API_KEY=your_maps_api_key

# ========================================
# BACKUP CONFIGURATION
# ========================================
BACKUP_ENABLED=true
BACKUP_INTERVAL=daily
BACKUP_RETENTION_DAYS=30
BACKUP_STORAGE_PATH=backups/

# ========================================
# NOTES
# ========================================
# 1. Change all default passwords before deploying to production
# 2. Generate new secret keys for production deployment
# 3. Set up proper SSL certificates for HTTPS
# 4. Configure proper email settings for notifications
# 5. Set up monitoring and alerting in production
# 6. Regular backup strategy should be implemented
# 7. Use environment-specific values for different deployment stages